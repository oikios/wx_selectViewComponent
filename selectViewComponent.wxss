/* templates/selectViewComponent.wxss */

.containerView {
  width: 100vw;
  background: rgb(245, 245, 245);
  padding-bottom: 20px;
  padding-top: 20px;
}

.sectionTitle {
  font-size: 14px;
  color: rgb(100, 100, 100);
  margin-left: 15px;
  margin-bottom: 15px;
}

.sectionLabel {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20px;
  margin-right: 15px;
  overflow: hidden;
}

.label {
  margin-left: 15px;
  margin-bottom: 15px;
  font-size: 13px;
  color: rgb(100, 100, 100);
  background-color: white;
  border: 0.5px solid #dcdcdc;
  border-radius: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 30px;
  padding-left: 10px;
  padding-right: 10px;
}

.label_select {
  margin-left: 15px;
  margin-bottom: 15px;
  font-size: 13px;
  color: white;
  background-color: rgb(71, 126, 239);
  border: 0.5px solid #dcdcdc;
  border-radius: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 30px;
  padding-left: 10px;
  padding-right: 10px;
}

.confirm {
  font-size: 18px;
  background-color: rgb(71, 126, 239);
  color: white;
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
}

.reset {
  width:calc(100%/2.0);
  background: white;
  font-size: 18px;
  color: #646464;
  line-height: 44px;
  height: 44px;  
  text-align: center;
  
}
.bottomView {
  margin-bottom: -20px;
  display: flex;
  height: 44px;
  width:100%;
}
